# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_PATH=./database/hibe_ai.db
DB_LOGGING=false
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Security
WEBHOOK_TOKEN=your-secret-webhook-token-here-minimum-32-characters
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-for-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Batch Processing Configuration
BATCH_MAX_CONCURRENT_WORKERS=5
BATCH_RETRY_ATTEMPTS=3
BATCH_RETRY_DELAY_MS=1000

# URLs and Endpoints
CHECKOUT_BASE_URL=https://sandbox.hibe.local/checkout
API_BASE_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_FILE_MAX_FILES=5

# Caching (for future implementations)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Timeouts
REQUEST_TIMEOUT=10000
RESPONSE_TIMEOUT=10000

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_WEBHOOKS=true
ENABLE_IDEMPOTENCY=true

# Notifications (for future implementations)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password
